<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome !{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="{{ asset('images/cindy.svg') }}">

    {% block stylesheets %}
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
    {% endblock %}

    {% block javascripts %}
        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>
<div class="page-container">

    <div class="logo-photographer">
        <img src="{{ asset('images/logo_Cindy.png') }}" alt="Logo Cindy" class="logo-header">
    </div>

    <header>
        {% include('main/navbar.html.twig') %}
    </header>

    <main class="content">
        {% block body %}{% endblock %}
    </main>

    {%  for label, messages in app.flashes %}
        {%  for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert"> {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"> </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{#  <input type="button" value="page précédente" onclick="javascript:history.back()"> #}

    <footer class="footer">
        <div class="container">
            &copy; Cindy Nugre {{ "now"|date("Y") }}
        </div>
    </footer>

</body>
</html>
