{% extends 'base.html.twig' %}

{% block title %}Cindy Nugre - Portfolio{% endblock %}

{% block body %}
    <h2 class="text-center my-4">Portfolio</h2>

    {% if photos|length > 0 %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for photo in photos %}
                <div class="col">
                    <div class="card h-100 shadow-sm portfolio-card">
                        <div class="card-img-container position-relative">
                            <img src="{{ asset('uploads/posters/' ~ photo.poster) }}"
                                 class="card-img-top"
                                 alt="{{ photo.title }}">
                            <div class="overlay position-absolute top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center text-center">
                                <h5 class="text-white">{{ photo.title }}</h5>
                                <p class="text-white small">{{ photo.category.name ?? 'Sans catégorie' }}</p>
                                <a href="{{ path('photo_detail', {id: photo.id}) }}" class="btn btn-light btn-sm mt-2">Voir détails</a>
                            </div>
                        </div>
                        {# <div class="card-body d-none d-md-block">
                            <p class="card-text">{{ photo.description|nl2br }}</p>
                            <small class="text-muted">Publié le {{ photo.dateCreated|date('d/m/Y') }}</small>
                        </div> #}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-center">Aucune photo trouvée.</p>
    {% endif %}


{% endblock %}
